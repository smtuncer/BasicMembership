@model RegisterVM

<section class="content">
    <div class="content-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary card-outline mt-5">
                    <div class="card-header">
                        <h3 class="card-title">Yeni Kullanıcı Ekle</h3>
                    </div>
                    <form method="post">
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Ad Soyad*</label>
                                        <input asp-for="NameSurname" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Email*</label>
                                        <input type="email" asp-for="Email" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Telefon Numarası*</label>
                                        <input asp-for="PhoneNumber" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Parola*</label>
                                        <input type="text" asp-for="Password" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Parola Tekrar*</label>
                                        <input type="text" asp-for="ConfirmPassword" class="form-control" required>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>Yetki*</label>
                                        <select asp-for="Role" class="custom-select form-control" required>
                                            <option value="">Seçiniz..</option>
                                            <option value="@Role.Role_Admin">@Role.Role_Admin</option>
                                            <option value="@Role.Role_User">@Role.Role_User</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Yeni Kullanıcı Ekle</button>
                        </div>
                        <div class="card-footer clearfix">
                            <a class="btn btn-warning btn-sm float-right" asp-action="UserList">Kullanıcı Listesi</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
